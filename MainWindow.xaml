<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="SudokuTextBoxStyle" TargetType="TextBox">
            <!-- alap kinézet -->
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="White"/>

            <Style.Triggers>
                <!-- hover nem változtat semmit -->
                <Trigger Property="IsMouseOver" Value="True"/>
                <!-- fókusz sem változtat -->
                <Trigger Property="IsKeyboardFocused" Value="True"/>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- MENÜSOR -->
        <Menu Grid.Column="2" Grid.Row="1">
            <MenuItem Header="Játék" FontSize="14">
                <MenuItem Header="Kirakó" Click="KirakoMenu_Click"/>
                <MenuItem Header="Sudoku" Click="SudokuMenu_Click"/>
            </MenuItem>
            
            <MenuItem x:Name="ValasztottMenu" Header="Választott: -" IsEnabled="False"/>
        </Menu>
        <Menu Grid.Column="3" Grid.Row="1">
            <MenuItem x:Name="KepValasztoMenu" Header="Képválasztó" Click="KepValaszto_Click" Visibility="Collapsed"/>
            <MenuItem x:Name="SudokuEllenorzesMenu" Header="Ellenőrzés" Click="SudokuEllenorzesBtn_Click" Visibility="Collapsed"/>
        </Menu>

        <Menu Grid.Column="1" Grid.Row="1">

            <MenuItem Header="Hol" FontSize="14">
                <MenuItem Header="Helyszín" Click="Menu_Click"/>
                <MenuItem Header="Mikor" Click="Menu_Click"/>
            </MenuItem>
                
            <MenuItem Header="Kik" FontSize="14" Click="Menu_Click"/>
                
        </Menu>


        <Image Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="7" Grid.RowSpan="6" Name="kepHelye" Stretch="Fill" Opacity="0.25" Panel.ZIndex="0"/>
        <Canvas Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="7" Grid.RowSpan="6" Name="PuzzleCanvas" Background="Transparent" Panel.ZIndex="1"/>
        
        <Grid x:Name="SudokuGrid" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="7" Grid.RowSpan="6" Visibility="Collapsed"/>
    </Grid>
</Window>
